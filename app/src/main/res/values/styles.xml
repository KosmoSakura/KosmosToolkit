<resources>

    <!--基本主题-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--底部弹出的dialog-->
    <style name="TransparentBottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/SheetStyle</item>
    </style>
    <!--底部弹出的dialog-->
    <style name="SheetStyle" parent="android:Widget">
        <item name="android:background">@color/T_all</item>
        <item name="behavior_peekHeight">400dp</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">false</item>
    </style>

    <!--App启动页-->
    <style name="StartAppTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/layer_image</item>
    </style>

    <!--今日头条适配对话框-->
    <style name="KDatePicker" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="colorControlNormal">@color/black_txt</item>
        <item name="android:windowBackground">@color/T_all</item>
        <item name="android:layout_gravity">center</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- Minor指竖屏模式下的宽度 -->
        <item name="android:windowMinWidthMinor">324dp</item>
        <item name="windowFixedWidthMinor">324dp</item>
    </style>
    <!--今日头条适配对话框-->
    <style name="BDAlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <!--Minor指竖屏模式下的宽度-->
        <item name="android:windowMinWidthMinor">324dp</item>
        <item name="windowFixedWidthMinor">324dp</item>
    </style>
</resources>
