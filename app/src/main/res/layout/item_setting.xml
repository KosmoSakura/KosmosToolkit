<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sl_touch"
    android:orientation="horizontal"
    android:padding="14dp">

    <TextView
        android:id="@+id/setting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="15"
        android:maxLines="1"
        android:textColor="@color/fun_txt_black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/setting_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_name"
        android:ellipsize="end"
        android:maxEms="18"
        android:maxLines="2"
        android:textColor="@color/fun_txt_gray"
        android:textSize="12sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/setting_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:ems="5"
        android:gravity="end"
        android:maxLines="1"
        android:text="IndonesiaIndonesia"
        android:textColor="@color/green"
        android:textSize="14sp"
        android:visibility="gone"/>

    <View
        android:id="@+id/setting_check"
        android:layout_width="36dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/sl_light"/>
</RelativeLayout>