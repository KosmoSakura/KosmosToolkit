<?xml version="1.0" encoding="utf-8"?>
<cos.mos.utils.widget.EasySwipeMenuLayout
    android:id="@+id/item_qr_esl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:contentView="@+id/item_qr_content"
    app:rightMenuView="@+id/item_qr_right">

    <LinearLayout
        android:id="@+id/item_qr_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_qr_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:maxEms="5"
            android:maxLines="1"
            android:text="cnsacnsaicn"
            android:textColor="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_qr_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:gravity="center"
        android:text="Delete"
        android:textColor="@color/white"
        android:textSize="15sp"/>
</cos.mos.utils.widget.EasySwipeMenuLayout>