<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="@drawable/arc_full_gar_pink_r10_cor_2"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingTop="12dp">

    <TextView
        android:id="@+id/dia_time_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="出来上次你傻"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <DatePicker
        android:id="@+id/dia_time_picker"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:textColor="@color/fun_txt_black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/dia_time_confitm"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/arc_full_dark_r4"
        android:gravity="center"
        android:text="OK"
        android:textColor="@color/white"/>
</LinearLayout>